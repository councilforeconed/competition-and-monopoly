{{supply-demand-grid industryA=industryA industryB=industryB}}

<div class="societal-benefit sixteen columns clearfix">
  <strong>Societal Benefit</strong>: {{format-currency societalBenefit}}
</div>

<div class="industry-overview sixteen columns clearfix">
  <div class="industry-panel five columns">
    <h4>Resources Sold to Industry A</h4>
    <p class="amount">{{industryA}}</p>
    <p class="price">@{{format-currency pricePerUnit.industryA}}/resource</p>
  </div>
  <div class="industry-panel six columns">
    <h4>Resources Not Sold to Either Industry</h4>
    <p class="amount">{{noIndustry}}</p>
  </div>
  <div class="industry-panel five columns">
    <h4>Resources Sold to Industry B</h4>
    <p class="amount">{{industryB}}</p>
    <p class="price">@{{format-currency pricePerUnit.industryB}}/resource</ui>
  </div>
</div>

